{
  "name": "imoing/pptx",
  "description": "pptx inspired by python pptx",
  "authors": [
    {
      "name": "Jake"
    }
  ],
  "autoload": {
    "psr-4": {
      "\\Imoing\\Pptx\\": "src",
      "\\Tests\\": "tests"
    },
    "files": [
      "src/helper.php",
      "src/bootstrap.php"
    ]
  },
  "require": {
    "php": "^8.2",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "ext-gd": "*",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "pestphp/pest": "^4.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}